<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Serveur de synchronisation">

        <EditTextPreference
                app:defaultValue=""
                app:key="remote_addr"
                app:title="Adresse IP ou nom de domaine"
                app:useSimpleSummaryProvider="true" />

        <EditTextPreference
                app:defaultValue="8080"
                app:key="remote_port"
                app:title="Port"
                app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>